@{
    ViewBag.Title = "Home Page";
}

@section scripts {
    <script>var homeUrl = "@(Href("~/Home"))";</script>
    <script src="~/Scripts/rest.js" type="text/javascript"></script>

}
<div class="title-header">
    <h1>Order your takeaway online</h1>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1 input-box">
        <label>My outcode is...</label>
        <input class="form-control input-outcode" name="Outcode" type="text" id="outcode" />
        <button class="btn btn-takeaway" type="submit" id="submit">Find a takeaway</button>
    </div>
    <table id="restaurants" class="col-md-10 col-md-offset-1 restaurant-container hidden">
        <thead>
            <tr>
                <td></td>
                <td>Name</td>
                <td>Cuisine Types</td>
                <td>Rating</td>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <div id="no-data" class="hidden col-md-10 col-md-offset-1 no-data-container">
        <span>No takeaways were found for the specified outcode.</span>
    </div>
</div>